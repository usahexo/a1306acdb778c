/* about page */
.author-page
  padding: 40px 0 20px 0
  text-align: center
  &:after
    content: ""
    clear: both
    display: block
  .photo
    display: inline-block
    vertical-align: top
    box-sizing: content-box
    padding: 0 30px 30px 30px
    width: 180px
    height: 180px
    img
      width: 100%
      height: 100%
      padding: 0
      margin: 0
      border-radius: 50%
      -webkit-box-shadow: block-shadow
      box-shadow: block-shadow
  .author
    font-size: 16px
    line-height: 46px
    white-space: nowrap
    display: inline-block
    vertical-align: top
    text-align: left
    .fa
      margin-right: .4em
      &:before
        margin-right: .2em